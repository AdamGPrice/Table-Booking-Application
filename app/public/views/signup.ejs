<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up</title>
    <link rel="stylesheet" href="/vendor/materialize.min.css">
    <script src="/vendor/materialize.min.js"></script>
    <script src="/vendor/jquery-3.5.1.min.js"></script>
    <script src="/js/signup.js"></script>
    <style>
      .form-container {
        width: 400px;
      }
    </style>
</head>
<body>
    <!-- NAV BAR INCLUDE -->
    <%- include ('partials/nav.ejs'); %>
    <main>
    <div class="section"></div>
    <div class="center-align">
    <h3 class="blue-grey-text text-darken-1">Account Signup</h3>
      <div class="section"></div>
      <div class="container">
        <div class="form-container z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
          <form class="col s12" method="post">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>
            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='email' name='email' id='email' />
                <label for='email'>Enter your email</label>
              </div>
            </div>
            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='password' name='password' id='password' />
                <label for='password'>Enter your password</label>
              </div>
            </div>
            <br />
            <div class="center-align">
              <div class='row'>
                <button id="login" type='submit' name='btn_login' class='col s12 btn btn-large #263238 blue-grey darken-1'>Login</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  <!-- NAV BAR INCLUDE -->
  <%- include ('partials/footer.ejs'); %>
</body>
</html>