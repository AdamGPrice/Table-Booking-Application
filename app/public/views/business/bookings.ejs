<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | Bookings</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/vendor/materialize.min.css">
    <script src="/vendor/jquery-3.5.1.min.js"></script>
    <script src="/vendor/materialize.min.js"></script>
    <script src="/js/sidenav.js"></script>
    <script src="/js/business/bookings.js"></script>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/business/dash-nav.js"></script>
    <link rel="stylesheet" href="/css/bookings.css">
</head>
<body>
  <main class="row">
    <div class="col s12 m4 l2 blue-grey lighten-2" id="dashboard-nav">
      <%- include ('../partials/dash-nav.ejs') %> 
    </div>
    <div class="col s12 m8 l10 grey lighten-5" id="dashboard-content">
      <div class="container">
        <h2 class="center dashboard-title">Pub Bookings</h2>
        <div class="divider"></div>
        <div class="divider"></div>
        <div class="row">
          <div class="col s3">
            <h4>Select Date:</h4>
          </div>
          <div class="col s1">
            <i class="large material-icons" id="arrow-left">keyboard_arrow_left</i>
          </div>
          <div class="col s4">
            <input type="text" class="datepicker" id="datepicker">
          </div>
          <div class="col s1">
            <i class="large material-icons" id="arrow-right">keyboard_arrow_right</i>
          </div>
        </div>
        <div class="divider"></div>
        <div class="divider"></div>
        <div class="section"></div>
        
        <div id="bookings-none" style="display: none;">
          <h2>You have no bookings on </br>
            <span id="booking-date">Dec 18, 2020</span>.</h2>
          <h3>Pick a different date above</h3>
        </div>
        <div id="bookings-all">
          <div class="table-row">
          </div>
        </div>

        <!-- Page padding -->
        <div class="section"></div>
        <div class="section"></div>
        <div class="section"></div>
        <div class="section"></div>
        <div class="section"></div>
        <div class="section"></div>
      </div>
    </div>
  </main>
</body>
</html>