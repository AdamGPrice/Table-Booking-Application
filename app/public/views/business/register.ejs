<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register your business</title>
    <link rel="stylesheet" href="/vendor/materialize.min.css">
    <script src="/vendor/jquery-3.5.1.min.js"></script>
    <script src="/vendor/materialize.min.js"></script>
    <script src="/js/business/register.js"></script>
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
    .input-field label {
        color: rgba(0,0,0,0.42);
        font-size: 1.2rem;
    }
    </style>
</head>
<body>
<!-- NAV BAR INCLUDE -->
    <main class="row">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="section"></div>
                    <h2 class="center">Fill In Your Business Details</h2>
                    <div class="divider"></div>
                    <div class="divider"></div>
                    <div class="section">
                        <div class="container">
                          <div class="row">
                            <form class="col s12">
                              <div class="row">
                                <div class="input-field col s12">
                                  <input id="form-name" type="text">
                                  <label for="form-name">Pub name</label>
                                </div>
                              </div>
                              <div class="row">
                                <div class="input-field col s12">
                                  <textarea id="form-description" class="materialize-textarea"></textarea>
                                  <label for="form-description">Description</label>
                                </div>
                              </div>
                              <div class="row">
                                <div class="input-field col s12">
                                  <input id="form-email" type="email">
                                  <label for="form-email">Contact Email</label>
                                </div>
                              </div>
                              <div class="row">
                                <div class="input-field col s12">
                                  <input id="form-number" type="text">
                                  <label for="form-number">Contact Number</label>
                                </div>
                              </div>
                              <a class="waves-effect waves-light btn" id="details-confirm-btn">Confirm</a>
                            </form>
                          </div>
                        </div>
                      </div>
                      <div class="section"></div>
                      <div class="section"></div>
                      <div class="divider"></div>
                      <div class="divider"></div>
                </div>
            </div>
        </div>
    </main>
<!-- NAV BAR INCLUDE -->
</body>
</html>