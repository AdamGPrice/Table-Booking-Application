<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | New Booking</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/vendor/materialize.min.css">
    <script src="/vendor/jquery-3.5.1.min.js"></script>
    <script src="/vendor/materialize.min.js"></script>
    <script src="/js/sidenav.js"></script>
    <script src="/js/business/new-booking.js"></script>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="/js/business/dash-nav.js"></script>
    <link rel="stylesheet" href="/css/new-booking.css">
</head>
<body>
  <main class="row">
    <div class="col s12 m4 l2 blue-grey lighten-2" id="dashboard-nav">
      <%- include ('../partials/dash-nav.ejs') %> 
    </div>
    <div class="col s12 m8 l10 grey lighten-5" id="dashboard-content">
      <div class="container">
        <h2 class="center dashboard-title">New Booking</h2>
        <div class="divider"></div>
        <div class="divider"></div>
        <div class="section"></div>

        <div class="row" id="search-block">
            <div class="col s4 z-depth-3" id="booking-section">
                <h3 class="center">Book a table</h3>
                <div id="inputs">
                    <p>Date:</p>
                    <input type="text" class="datepicker" id="datepicker">

                    <div id="time-div">
                        <p>Time:</p>
                        <select id="time-select">
                        </select>
                    </div>
                    
                    <div id="duration-div">
                        <p>Duration:</p>
                        <select id="duration-select">
                        </select>
                    </div>

                    <p>Required Seats:</p>
                    <input type="Number" id="seats" value="4" min="1" max="20">

                    <p>Table location:</p>
                    <select id="location-select">
                        <option value="-1">Anywhere</option>
                        <option value="0">Inside</option>
                        <option value="1">Outside</option>
                    </select>
                    <div class="section"></div>
                    <a class="waves-effect waves-light btn" id="find-tables-btn">Find Tables</a>
                </div>
                <div class="section"></div>
            </div>
            <div class="col s1"></div>
            <div class="col s7 z-depth-3" id="tables-section">
                <h3 class="center">Available tables</h3>
                <div class="divider"></div>
                <div class="progress" id="loading-bar" style="display: none;">
                    <div class="indeterminate"></div>
                </div> 
                <div class="col s2"></div>
                <div id="table-list" class="col s8">
                </div>
                <div class="col s2"></div>
            </div>
        </div>

        <div class="row" id="booking-bock-guest">
            <div class="col s12 z-depth-3" id="booking-guest" style="display: none;">
                <h3 class="center">Guest</h3>
                <div class="divider"></div>
                <div class="col s1"></div>
                <div class="col s10">
                    <div class="center">
                        <h5>Enter the contact information for the guest booking</h5>
                    </div>
                </div>
                <div class="col s1"></div>
                <div class="row">
                    <div class="col s3"></div>
                    <div class="col s6">
                        <h4 class="center">Contact Details</h4>
                        <form class="row">
                            <div class="input-field col s12">
                                <input id="first_name" type="text" class="validate">
                                <label for="first_name">First Name</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="last_name" type="text" class="validate">
                                <label for="last_name">Last Name (optional)</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="phone" type="tel" class="validate">
                                <label for="phone">Phone</label>
                            </div>
                            <div class="center">
                                <a class="waves-effect waves-light btn center" id="guest-btn">Confirm Details</a>
                            </div>
                        </form>
                    </div>
                    <div class="col s3"></div>
                </div>
                <div class="section"></div>
            </div>  
        </div>

        <div class="row" id="booking-block">
            <div class="col s12 z-depth-3" id="booking-outcome">

            </div>
        </div>

        <!-- Page padding -->
        <div class="section"></div>
        <div class="section"></div>
        <div class="section"></div>
        <div class="section"></div>
        <div class="section"></div>
        <div class="section"></div>
      </div>
    </div>
  </main>
</body>
</html>