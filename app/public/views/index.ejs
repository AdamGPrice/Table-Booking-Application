<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/vendor/materialize.min.css">
    <link rel="stylesheet" href="/css/index.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="/vendor/jquery-3.5.1.min.js"></script>
    <script src="/vendor/materialize.min.js"></script>
    <script src="/js/sidenav.js"></script>
    <script src="/js/index.js"></script>
</head>
<body>
    <!-- NAV BAR INCLUDE -->
    <%- include ('partials/side-nav.ejs'); %>
    <main class="container">
        <div class="section"></div>
        <div class="row">
            <div class="col s2"></div>
            <div class="col s10">
                <h1 class="teal-text darken-1">Table Booking Application</h1>
                <h5>Makes booking simple</h5>
                <div class="section"></div>
                <h4>Search by pub name or location</h4>
            </div>
        </div>
        <div class="row">
            <div class="col s2"></div>
            <div id="search-box" class="z-depth-3 col s8">
                <i class="medium material-icons col s1">search</i>
                <div class="input-field col s9">
                    <input placeholder="Search by pub name or location" id="pub-search" type="text" class="validate">
                </div>
                <a class="waves-effect waves-light btn teal darken-1" id="search-btn">Search</a>
            </div>
            <div class="col 2"></div>
        </div>
    </main>
    <!-- NAV BAR INCLUDE -->
    <%- include ('partials/footer.ejs'); %>
</body>
</html>

